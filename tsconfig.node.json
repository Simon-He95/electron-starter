{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "types": ["electron-vite/node"],
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true // 添加这个选项跳过库文件检查
  },
  "files": ["src/shared/index.d.ts"],
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/shared/**/*", "env.d.ts", "src/types/**/*"]
}
